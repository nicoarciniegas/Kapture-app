<?xml version="1.0" encoding="UTF-8" ?>
<Shell
       x:Class="Prodygytek_Kapture_App.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Prodygytek_Kapture_App"
       xmlns:views="clr-namespace:Prodygytek_Kapture_App.Views"
       Shell.TabBarBackgroundColor="#512BD4"
       Shell.TabBarUnselectedColor="White">

    <TabBar>
        <ShellContent
               Title="Inicio"
               Route="main"
               ContentTemplate="{DataTemplate views:MainPage}"
               Icon="home" />

        <ShellContent 
               Title="Formulario"
               Route="forms"
               ContentTemplate="{DataTemplate views:Forms}"
               Icon="form" />

        <ShellContent 
               Title="Salir"
               ContentTemplate="{DataTemplate views:Login}" 
               Icon="logout" />
    </TabBar>

</Shell>
   